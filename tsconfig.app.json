{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // React + Vite 向け推奨設定
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",

    // 品質・開発体験
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    // TS5.5+ の型インポート厳格化
    "verbatimModuleSyntax": true
  },
  "include": ["src", "vite-env.d.ts"],
  "exclude": ["node_modules"]
}